@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Foods</h1>

@if (Model.Count == 0)
{
  <h3>No foods have been added yet!</h3>
}

@foreach (Food food in Model)
{
    <li>@Html.ActionLink($"{food.FoodType}", "Details", new { id = food.FoodId })</li>
}

<p>@Html.ActionLink("Add new Food", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>